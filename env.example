# Search backends
OPENSEARCH_URL=http://opensearch:9200
QDRANT_URL=http://qdrant:6333

# Datastores
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=searchit
POSTGRES_USER=searchit
POSTGRES_PASSWORD=searchit
MINIO_ENDPOINT=http://minio:9000
MINIO_ACCESS_KEY=searchit
MINIO_SECRET_KEY=searchitsecret
MINIO_BUCKET=searchit-data

# Analytics
KAFKA_BROKER=redpanda:9092

# Gateway
GATEWAY_PORT=8000
ENV=dev

# Models
EMBED_MODEL=intfloat/e5-base
RERANKER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2
GENERATOR=stub            # stub|hf|api
HF_TOKEN=

# Optional: OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=http://jaeger:14268/api/traces
OTEL_SERVICE_NAME=searchit-gateway
